        <!-- Emotion State Field -->

        <!-- Reason Field -->

        <!-- Trigger Field -->

        <!-- Social Situation Radio Buttons -->

        <!-- Second Social Situation Field -->

        <!-- Second Reason Field -->

        <!-- Media Section -->
        <!-- Media Section -->

        <!-- Action Buttons -->

    </LinearLayout>
</ScrollView>